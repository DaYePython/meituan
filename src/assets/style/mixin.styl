// 右边竖向分割线
right-bar(right=-.16rem)  
  margin-right: .2rem 
  position: relative 
  &:after  
    position: absolute 
    content: '' 
    top: .04rem 
    right: right 
    height: .3rem 
    // .02rem
    border-right: .02rem solid #999 
    transform: scaleY(0.5) 
   
 

// 2x 3x 背景图片
bg-image(name)//默认2x图，dpr为3则使用3x图
    background-image: url(name+"@2x.webp")
    @media (-webkit-min-device-pixel-ratio: 3),(-min-device-pixel-ratio: 3)
        background-image: url(name+"@3x.webp")
 

// 文本溢出省略号显示 (默认1行)
ellipsis(line=1) 
  if line == 1  
    -ms-text-overflow: ellipsis 
    text-overflow: ellipsis 
    overflow: hidden 
    white-space: nowrap 
   
  else  
    display: -webkit-box !important 
    -ms-text-overflow: ellipsis 
    text-overflow:ellipsis 
    overflow: hidden 
    // word-break: break-all  // 断词
    -webkit-box-orient: vertical 
    -webkit-line-clamp: line 
   
 

// 扩展点击区域
extend-click()  
  // position: abosulte 
  // right: 0 
  // top: 0 
  // padding: 20px 

  position: relative 
  &:before  
    content: '' 
    position: absolute 
    top: -.2rem 
    left: -.2rem 
    right: -.2rem 
    bottom: -.2rem 
   
 

// 遮罩层
over-screen(pos='fixed')  
  top: 0 
  left: 0 
  right: 0 
  bottom: 0 

  // 全屏遮罩
  if pos == 'fixed'  
    position: fixed 
   
  // 区域遮罩
  else if pos == 'absolute'  
    position: absolute 
   
 

// 子元素 默认水平垂直居中
child-center(mode= 'xy')  
    display: flex 
  // 水平居中
if mode == 'x'  
    align-items: center

// 垂直居中
else if mode == 'y'  
    justify-content: center 

// 水平垂直居中
else  
    align-items: center 
    justify-content: center 
   
 

// 当前元素 默认水平垂直居中
cur-center(w= 0, h= 0)  
  position: absolute 
  top: 50% 
  left: 50% 
  width: w 
  height: h 
  // margin-top: -(h / 2) 
  // margin-left: -(w / 2) 
  transform: translate(-50%, -50%) 
 

// 移动端 .02rem 边框问题
onepx(mode= 'top', lastHide= false)  
    // 低级用法：
    //      border-bottom: .02rem solid rgba(7, 17, 27, 0.1) 
    // 中级用法：
    //      box-shadow: inset 0px .02rem .02rem -.02rem #c8c7cc 
    //      box-shadow: inset 0px -.02rem .02rem -.02rem #c8c7cc 
    // 高级用法：
    position: relative 
    &:after
        content: '' 
        display: block 
        position: absolute 
        left: 0 
        width: 100% 
        border-bottom .02rem solid rgba(7,17, 27, 0.1) 
        transform: scaleY(0.5) 

    // 请勿后退一个TAB
    if mode == 'top'  
        &:after
            top: 0 
    if mode == 'bottom'  
        &:after  
            bottom: 0
    if lastHide  
        &:last-child  
            &:after
                border-top: 0


